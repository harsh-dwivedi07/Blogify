@model BlogsAssignment.Models.Posts
@{
    ViewBag.Title = "Get";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Get</h2>
<div class="container mt-4">
    <!-- Card Example -->
    <div class="card">
        <!-- Card Header -->
        <div class="card-header  text-center">
            <h5 class="card-title">@Model.Title</h5>
            <p>By: @Model.Author</p>
        </div>
        <!-- Card Body -->
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                @*<img src="@Url.Content(Model.ImageUrl)" class="img-fluid" alt="Optional Image">*@
            }
            @if (Model.ImageData != null)
            {
                string imageBase64 = Convert.ToBase64String(Model.ImageData);
                string imageSrc = string.Format("data:image/jpg;base64,{0}", imageBase64);
                <img src="@imageSrc" class="img-fluid" alt="Optional Image">
            }
            <p class="card-text">@Model.Content</p>
        </div>
    </div>
</div>
