@model BlogsAssignment.Models.Posts
@{
    ViewBag.Title = "Upsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var errorMessage = TempData["ErrorMessage"] as string;
}
@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">
        @errorMessage
    </div>
}

<div class="row">
    <div class="col-10">
        <div class="border p-3 mt-4 row">
            <div class="col-12 pb-2">
                <h2 class="text-primary">@ViewBag.FormTitle</h2>
                <hr />
            </div>



            @using (Html.BeginForm("Create", "Blogs", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="row">
                    <div class=" form-group mb-3 col-5">

                        <div class="row">
                            @Html.LabelFor(model => model.Title, new { @class = "font-weight-bold" })
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Enter title", @Value = ViewBag.ContentTitle })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group mb-3 mt-2 ml-3 col-5" style="margin-left: 4rem;">
                        <div class="row">
                            @Html.LabelFor(model => model.ImageUrl, "Image", new { @class = "font-weight-bold" })
                            <input type="file" class="form-control-file" id="Image" name="Image" accept="image/*" />

                            @Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group mb-3 mt-2 col-10">
                    <div class="row">
                        @Html.LabelFor(model => model.Content, new { @class = "font-weight-bold" })
                        @Html.TextAreaFor(model => model.Content, new { @class = "form-control", rows = 4, placeholder = "Enter content" })
                        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group mb-3 mt-2">
                    <button type="submit" name="action" value="draft" class="btn btn-secondary mr-2">Save as Draft</button>
                    <button type="submit" name="action" value="published" class="btn btn-primary">Publish</button>
                </div>
            }
        </div>

    </div>

</div>
